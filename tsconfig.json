{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@Views/*": ["Views/*"],
      "@ViewModels/*": ["ViewsModels/*"],
      "@Models/*": ["Models/*"],
      "@components/*": ["components/*"],
      "@pages/*": ["app/*"],
      "@type/*": ["./types/*"],
      "@redux/*": ["./redux/*"],
      "@constant/*": ["./constant/*"],
      "@utils": ["utils/*"]
    }
  },

  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "components/membership/SignUpModal.tsx",
    "utils/firebase.ㅓㄴ"
  ],
  "exclude": ["node_modules"]
}
